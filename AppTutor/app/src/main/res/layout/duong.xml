<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="100sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="ĐĂNG KÝ"/>

    <EditText
        android:id="@+id/edt_email"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:layout_marginTop="80sp"
        android:textSize="25dp"
        android:layout_marginHorizontal="30sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint=" Nhập email"/>

    <EditText
        android:id="@+id/edt_phonenumber"
        android:drawableLeft="@drawable/ic_baseline_smartphone_24"
        android:textSize="25dp"
        android:layout_marginHorizontal="30sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint=" Nhập số điện thoại"/>

    <EditText
        android:id="@+id/edt_pass"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:textSize="25dp"
        android:layout_marginHorizontal="30sp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:hint=" Nhập mật khẩu"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_repass"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:layout_marginHorizontal="30sp"
        android:textSize="25dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:hint=" Nhập lại mật khẩu"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="25dp"
        android:layout_marginHorizontal="30sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Chọn vai trò"/>

    <RadioGroup
        android:id="@+id/radioGroup_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginHorizontal="30sp"
            android:text="Giáo viên"
            android:id="@+id/rBtn_tutor" />
        <RadioButton
            android:text="Học sinh"
            android:id="@+id/rBtn_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginHorizontal="30sp" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_signup"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Đăng ký" />

        <Button
            android:layout_marginLeft="100sp"
            android:layout_gravity="center"
            android:id="@+id/btn_cancel"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Huỷ" />
    </LinearLayout>

</LinearLayout>